---
layout: layout.liquid
---
{% assign words = content | strip | split: " " %}
{% assign estimated_time = words.size | divided_by: 300 | round %}

{% if estimated_time == 0 %}
    {% assign estimated_read_time = "Menos de 1 minuto" %}
{% elsif estimated_time == 1 %}
    {% assign estimated_read_time = "1 minuto" %}
{% else %}
    {% capture estimated_read_time %}{{ estimated_time }} minutos{% endcapture %}
{% endif %}

<figure class="post-hero" role="img" style="background-image: url('{{ cover_image }}');">
    <a class="post-hero__badge"
        href="https://unsplash.com/@{{cover_image_author_username}}?utm_medium=referral&amp;utm_campaign=photographer-credit&amp;utm_content=creditBadge"
        target="_blank" rel="noopener noreferrer"
        title="Download free do whatever you want high-resolution photos from {{ cover_image_author }}"
    >
        <span>
            <svg xmlns="http://www.w3.org/2000/svg"
                style="height:12px;width:auto;position:relative;vertical-align:middle;top:-2px;fill:white"
                viewBox="0 0 32 32"
            >
                <title>unsplash-logo</title>
                <path d="M10 9V0h12v9H10zm12 5h10v18H0V14h10v9h12v-9z"></path>
            </svg>
        </span>
        <span>Imagen por {{ cover_image_author }}</span>
    </a>
</figure>

<article class="post-page">
    <hgroup class="post-page__header">
        <h1 class="post-page__title"><span>{{ title }}</span></h1>
        {% if subtitle %}
            <h2 class="post-page__subtitle"><span>{{ subtitle }}</span></h2>
        {% endif %}

        <p class="post-page__meta">
            <b>Publicado:</b> <span>{{ date | date: "%e/%m/%Y" }} Â·</span> <b>Tiempo de lectura:</b> <span>{{ estimated_read_time }}</span>
        </p>
    </hgroup>

    <section class="card post-page__content">
        {{ content }}
    </section>
</article>
